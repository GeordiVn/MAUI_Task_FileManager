<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskFileManager.Login"
             Title="Login">
    <VerticalStackLayout VerticalOptions="Center">

        <Frame WidthRequest="200" VerticalOptions="Center" CornerRadius="10">
            <StackLayout>
                <Label HorizontalOptions="Center" FontSize="Subtitle" Text="Login"></Label>
                <Label Text="Username"></Label>
                <Entry Margin="0,0,0,20"  x:Name="usernameField"></Entry>
                <Label Text="Password"></Label>
                <Entry Margin="0,0,0,20" IsPassword="True" x:Name="passwordField"></Entry>
                <Button Margin="0,0,0,20" WidthRequest="100"  CornerRadius="5" Text="Login" x:Name="buttonSubmit"></Button>
                <Button Margin="0,0,0,20" WidthRequest="100"  CornerRadius="5" Text="Register" x:Name="buttonRegister"></Button>
            </StackLayout>
        </Frame>
        
       
        
    </VerticalStackLayout>
</ContentPage>