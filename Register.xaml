<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskFileManager.Register"
             Title="Register">
    <VerticalStackLayout VerticalOptions="Center">

        <Frame WidthRequest="200" VerticalOptions="Center" CornerRadius="10">
            <StackLayout>
                <Label HorizontalOptions="Center" FontSize="Subtitle" Text="Register"></Label>
                <Label Text="Username"></Label>
                <Entry Margin="0,0,0,20"  x:Name="usernameRegisterField"></Entry>
                <Label Text="Email"></Label>
                <Entry Margin="0,0,0,20" x:Name="emailRegisterField" ></Entry>
                <Label Text="Password"></Label>
                <Entry Margin="0,0,0,20" IsPassword="True" x:Name="passwordRegisterField"></Entry>                
                <Button Margin="0,0,0,20" WidthRequest="100"  CornerRadius="5" Text="Register" x:Name="buttonRegister"></Button>
            </StackLayout>
        </Frame>



    </VerticalStackLayout>
</ContentPage>